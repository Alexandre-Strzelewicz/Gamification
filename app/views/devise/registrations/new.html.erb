<div class="block" id="block-text">
  <div class="content sized-content">
    <div class="inner">
      <h2 class="title">S'enregistrer</h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>

	<div><%= f.label :email %><br />
	  <%= f.email_field :email %></div>

	<div><%= f.label :f_name %><br />
	  <%= f.text_field :f_name %></div>

	<div><%= f.label :l_name %><br />
	  <%= f.text_field :l_name %></div>

	<div><%= f.label :grade, :text => 'Votre promotion' %><br />
	  <%= f.text_field :grade %></div>


	<div><%= f.label :password %><br />
	  <%= f.password_field :password %></div>
	
	<div><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation %></div>

	<br/>
	<div><%= f.submit "Sign up" %></div>
	<br/>
      <% end %>

      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>
